                                <div class="product__item__pic set-bg" data-setbg="<%= s2.getImage()%>">
                                    <ul class="product__item__pic__hover">
                                        <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                        <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                        <li><a href="javascript:void(0)" data-value="<%= s2.getProductId() %>" onclick="addCart(this)"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><a href="javascript:void(0)" data-value="<%= s2.getProductId() %>" onclick="shop(this)"><%= s2.getProductName() %></a></h6>
